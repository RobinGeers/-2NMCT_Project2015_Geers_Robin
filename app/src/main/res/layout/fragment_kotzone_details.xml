<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="nmct.howest.be.desproject.KotzoneDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="&lt; Kies kot"
        android:id="@+id/buttonBack"
        android:background="#03A9F4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="3dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/buttonBack"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Straat 18"
            android:id="@+id/textViewDetailsStraat"
            android:layout_below="@+id/buttonBack"
            android:layout_alignStart="@+id/buttonBack"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stad"
            android:id="@+id/textViewDetailsStad"
            android:layout_below="@+id/textViewDetailsStraat"
            android:layout_alignStart="@+id/textViewDetailsStraat"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Land"
            android:id="@+id/textViewDetailsLand"
            android:layout_below="@+id/textViewDetailsStraat"
            android:layout_toEndOf="@+id/textViewDetailsStad"/>
    </LinearLayout>

</RelativeLayout>
