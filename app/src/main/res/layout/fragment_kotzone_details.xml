<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="nmct.howest.be.desproject.KotzoneDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="&lt; Kies kot"
        android:id="@+id/buttonBack"
        android:background="#03A9F4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude:"
        android:id="@+id/textViewDetailsLatitude"
        android:layout_below="@+id/buttonBack"
        android:layout_alignStart="@+id/buttonBack"
        android:layout_marginTop="26dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude:"
        android:id="@+id/textViewDetailsLongitude"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textViewDetailsLatitude"
        android:layout_alignStart="@+id/textViewDetailsLatitude"/>

</RelativeLayout>
