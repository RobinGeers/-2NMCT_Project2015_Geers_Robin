<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="nmct.howest.be.desproject.MainFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewBereik"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Bekijk studentenkoten"
        android:id="@+id/buttonToonKoten"
        android:background="#03A9F4"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welkom bij KotGent"
        android:id="@+id/textView"
        android:textSize="32sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/textViewBereik"
        android:layout_centerHorizontal="true"
        android:textColor="#212121"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kies kotzone"
        android:id="@+id/buttonKiesKotzone"
        android:background="#03A9F4"
        android:layout_below="@+id/textViewGekozenKotzone"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_marginTop="24dp"
        android:src="@drawable/gent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kies eerst je kotzone"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:layout_marginTop="43dp"
        android:textColor="#727272"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bekijk daarna de beschikbare koten"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textColor="#727272"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/buttonKiesKotzone"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGekozenKotzone"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"/>

</RelativeLayout>
